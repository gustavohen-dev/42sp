NAME = libft.a
SRCS = ft_memset.c ft_bzero.c ft_memcpy.c ft_memccpy.c ft_memmove.c \
	ft_memchr.c ft_memcmp.c ft_strlen.c ft_strlcpy.c ft_strlcat.c \
	ft_strchr.c ft_strrchr.c ft_strnstr.c ft_strncmp.c ft_isalpha.c \
	ft_isdigit.c ft_isalnum.c ft_isascii.c ft_isprint.c ft_toupper.c \
	ft_tolower.c ft_atoi.c ft_calloc.c ft_strdup.c ft_substr.c *ft_strjoin.c\
	ft_strtrim.c ft_itoa.c ft_strmapi.c ft_putchar_fd.c ft_putstr_fd.c\
	ft_putendl_fd.c ft_putnbr_fd.c ft_split.c
SRCS_BONUS = ft_lstnew.c ft_lstadd_front.c ft_lstsize.c ft_lstlast.c\
	ft_lstadd_back.c ft_lstdelone.c ft_lstclear.c ft_lstiter.c ft_lstmap.c

OBJS = $(SRCS:.c=.o)
OBJS_BONUS = $(SRCS_BONUS:.c=.o)
FLAGS = -Wextra -Werror -Wall
CC = gcc -c

all: $(NAME)

$(NAME): $(SRCS) libft.h
	gcc $(FLAGS) -c $(SRCS)
	ar -rcs $(NAME) $(OBJS)
	gcc $(FLAGS) main.c libft.a
	./a.out

bonus: all $(OBJS_BONUS) $(NAME)
	gcc $(FLAGS) -c $(SRCS_BONUS)
	ar -rcs $(NAME) $(OBJS_BONUS) $(OBJS)

clean:
	rm -f $(OBJS) $(OBJS_BONUS)

fclean:
	rm -rf $(NAME)

re: fclean clean all

.PHONY: all bonus clean fclean re

git: fclean clean
	git add .
	git commit -m "Update"
	git push

so:
	gcc -c -fPIC $(FLAGS) $(SRCS)
	gcc -shared -o libft.so $(OBJS)